/**
 * Mixins
 */

box-sizing() {
	-webkit-box-sizing: arguments;
	   -moz-box-sizing: arguments;
	   		box-sizing: arguments;
}

clearfix()
	&:before
	&:after
		content: " ";
		display: table;
	&:after
		clear: both;

list-unstyled()
	padding-left: 0;
	list-style: none;

box-shadow() {
	-webkit-box-shadow: arguments;
	   -moz-box-shadow: arguments;
			box-shadow: arguments;
}

gradient-vertical(color-start, color-end)
	background-image: -webkit-gradient(linear, left 0%, left 100%, from(color-start), to(color-end));
	background-image: -webkit-linear-gradient(top, color-start, 0%, color-end, 100%);
	background-image:  -moz-linear-gradient(top, color-start 0%, color-end 100%);
	background-image: linear-gradient(to bottom, color-start 0%, color-end 100%);
	background-repeat: repeat-x;
	filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr=" + rgb(color-start) + ", endColorstr=" + rgb(color-end) + ", GradientType=0)";

text-overflow()
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;