/**
 * Navigation
 */

.drawer-navigation
	ul
		padding: 0;
		list-style: none;
		margin: 0;

.drawer-navigation
	li
		&:not(:first-child)
			a
				border-top: 1px solid #3E4555;
		&.separator
			padding: 7.5px 10px;
			gradient-vertical(#434A5E, #394052);
			color: #9CA4B3;
			text-transform: uppercase;
			font-weight: 800;
			border-bottom: 1px solid #242A37;
			font-size: ceil(base-font-size * 0.85);
		a
			display: block;
			padding: 10px;
			color: #C4CCDA;
			text-shadow: 0 1px 2px rgba(000, 000, 000, 0.45);
			line-height: 21px;
			font-size: 16px;
			font-weight: 400;
			vertical-align: top;
			border-bottom: 1px solid #242A37;
			&:active
			&.active
				border-top-color: transparent;
				background-color: #292F3D;
	i
		padding-right: 10px;