/**
 * Header
 */

.content-header
	height: 50px
	background: #557799
	border-bottom: 1px solid rgba(000, 000, 000, 0.25)
	
	h1
		display: inline-block
		float: left
		color: #FFFFFF
		line-height: 50px
		vertical-align: top
		padding-left: 10px

	.button
		position: relative
		display: inline-block
		float: left
		width: 50px
		height: 50px
		text-align: center
		border-right: 1px solid rgba(000, 000, 000, 0.25)
		color: #FFFFFF
		font-size: 28px
		line-height: 50px
		text-shadow: 1px 1px 2px rgba(000, 000, 000, 0.25)

		&:after
			position: absolute
			display: inline-block
			content: ""
			height: 50px
			width: 0px
			right: -2px
			border-right: 1px solid rgba(255, 255, 255, 0.15)